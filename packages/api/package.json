{
  "name": "@solweave/api",
  "version": "0.0.2",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "watch": "npm run build && node --trace-warnings .dist/index.js",
    "dev": "ENVIRONMENT_NAME=dev npm-watch watch",
    "build": "NODE_OPTIONS=--max-old-space-size=4096 tsc --jsx react --project . ",
    "start": "node .dist/index.js"
  },
  "watch": {
    "watch": {
      "patterns": [
        "src"
      ],
      "quiet": false,
      "legacyWatch": true,
      "extensions": "ts, js, tsx"
    }
  },
  "devDependencies": {
    "@types/bs58": "^4.0.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "8.0.1",
    "@types/long": "^3.0.32",
    "@types/node": "^10.17.49",
    "npm-watch": "^0.5.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@solana/web3.js": "^1.30.2",
    "@solweave/cost-calculator": "^0.0.2",
    "@types/multer": "^1.4.7",
    "arweave": "^1.10.18",
    "bs58": "^4.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "fs-extra": "8.0.1",
    "multer": "^1.4.3"
  }
}
